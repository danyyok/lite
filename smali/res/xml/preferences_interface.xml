<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/interfacenewsfeed">
        <com.vtosters.lite.ui.MaterialSwitchPreference
            android:defaultValue="true"
            android:key="stories"
            android:summary="@string/showstoriessum"
            android:title="@string/showstories" />
        <com.vtosters.lite.ui.MaterialSwitchPreference
            android:defaultValue="true"
            android:key="swipe"
            android:title="@string/interfacenewsfeedswipe" />
        <com.vtosters.lite.ui.MaterialSwitchPreference
            android:defaultValue="true"
            android:key="whatsnew"
            android:summary="Блок написания поста в ленте"
            android:title="Показывать блок поста" />
        <com.vtosters.lite.ui.MaterialSwitchPreference
            android:defaultValue="false"
            android:key="is_likes_on_right"
            android:title="Показ лайков в посте справа" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/interfaceglobal">
        <com.vtosters.lite.ui.SummaryListPreference
            android:defaultValue="default"
            android:dialogTitle="@string/interfacestartfrsum"
            android:entries="@array/start"
            android:entryValues="@array/start_values"
            android:key="start_values"
            android:title="@string/interfacestartfr" />
        <com.vtosters.lite.ui.SummaryListPreference
            android:defaultValue="noanim"
            android:dialogTitle="@string/selectfranimation"
            android:entries="@array/animations2"
            android:entryValues="@array/animations_values2"
            android:key="anim_rtrn_type"
            android:title="@string/franimation" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/interfacevideo">
        <com.vtosters.lite.ui.MaterialSwitchPreference
            android:defaultValue="true"
            android:key="postsredesign"
            android:summary="Теперь текст к видео отображается под видео материалом"
            android:title="Редизайн видеопостов" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Меню">
        <com.vtosters.lite.ui.MaterialSwitchPreference
            android:defaultValue="true"
            android:key="miniapps"
            android:summary="Показывать Miniapps/Игры в меню"
            android:title="Блок миниаппов" />
        <com.vtosters.lite.ui.MaterialSwitchPreference
            android:defaultValue="true"
            android:key="vkpay"
            android:summary="Показывать VK Pay в меню"
            android:title="Блок VK Pay" />
        <com.vtosters.lite.ui.MaterialSwitchPreference
            android:defaultValue="true"
            android:key="superapp"
            android:summary="Новый вид меню как в новых версиях ВКонтакте"
            android:title="Супераппы" />
        <com.vtosters.lite.ui.MaterialSwitchPreference
            android:defaultValue="false"
            android:key="showmenu"
            android:summary="@string/menucuttersum"
            android:title="@string/menucutter" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/vtlother">
        <com.vtosters.lite.ui.MaterialSwitchPreference
            android:defaultValue="false"
            android:key="friendsblock"
            android:summary="Скрыть блок рекомендаций друзей в друзьях"
            android:title="Скрыть друзей" />
        <com.vtosters.lite.ui.MaterialSwitchPreference
            android:defaultValue="false"
            android:key="disableSettingsSumms"
            android:title="@string/vtlhidesumm" />
    </PreferenceCategory>
</PreferenceScreen>