<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_checked="true"
        android:id="@id/checked"
        android:drawable="@drawable/vk_icon_sun_outline_28" />
    <item
        android:state_checked="false"
        android:id="@id/unchecked"
        android:drawable="@drawable/vk_icon_moon_outline_28" />
    <transition
        android:drawable="@drawable/vk_icon_animated_sun_to_moon"
        android:toId="@id/unchecked"
        android:fromId="@id/checked" />
    <transition
        android:drawable="@drawable/vk_icon_animated_moon_to_sun"
        android:toId="@id/checked"
        android:fromId="@id/unchecked" />
</animated-selector>